# Local/private config goes in the include
[include]
    path = ~/.gitconfig.local
[alias]
    st = status -s -b
    ch = checkout
    com = commit
    commit-af = commit --amend --no-edit
    merge-ff = merge --ff-only
    log = log ---graph --decorate
    vlog = log --graph --decorate --pretty=short --abbrev-commit
    wc = whatchanged
[core]
    excludesfile = ~/.gitignore
    editor = vim
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
[push]
    default = simple
